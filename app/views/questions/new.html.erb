<h1>New Question</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for questions</p>
    <ul>
      <li>Google it first.</li>
      <li>Re-read your question before posting</li>
    </ul>

    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |q| %>
      <div class="form-group">
        <%= q.label :title %>
        <%= q.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
      </div>
      <div class="form-group">
        <%= q.label :body %>
        <%= q.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
      </div>
      <div class="form-group">
        <%= q.label :resolved %>
        <%= q. check_box :resolved %>
      </div>
      <div class="form-group">
        <%= q.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>
