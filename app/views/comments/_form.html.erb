<% if current_user %>
  <%= form_for [topic, post, comment] do |f| %>
   <div class="form-group">
     <%= f.label :comment %>
     <%= f.text_area :body, class: 'form-control', placeholder: "Enter comment" %>
   </div>
   <div class="form-group">
     <%= f.submit "Post Comment", class: 'btn btn-success' %>
   </div>
   <% end %>
<% end %>
