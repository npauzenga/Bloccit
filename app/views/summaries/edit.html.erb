<h1>Edit Summary</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for edit_post_summary_path do |f| %>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
